<div class="welcome-container">
<div class="front-bg">
<%=image_tag "rpbridge.jpg" %>
</div>
<section class="form-signin welcome-signup welcome-signup-bg">
		<h4>New? Sign up</h4>
		<hr>
		<%=form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>
		<%= f.text_field :username, class: "input_medium", placeholder: "username" %>
		<%= f.text_field :email, class: "input_medium", placeholder: "email" %>
		<%= f.password_field :password , class: "input_medium", placeholder: "password" %>
		<%= f.password_field :password_confirmation, class: "input_medium", placeholder: "confirmation"%>
		<%= f.submit "Create a new account", class: "btn btn-success " %>
		<% end %>
</section>
<div class="lph">
	<em><p> Love, Peace and Happy Coding </p></em>
</div>
</div>